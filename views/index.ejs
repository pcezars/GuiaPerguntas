<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a href="/perguntar" class="btn btn-primary mt-4 mb-4">Perguntar</a>
        <hr>

        <% perguntas.forEach(pergunta => { %>
            
            <div class="card mt-4">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <% }) %>
    </div>
    
</body>
<%- include('partials/footer') %>